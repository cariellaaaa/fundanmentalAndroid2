<resources>
    <!-- Base application theme for Dark mode -->
    <style name="Base.Theme.AndroidFundamental1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="android:statusBarColor">@color/black</item>

        <!-- Surface colors for background in dark mode -->
        <item name="colorSurface">@color/darkGrey</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceInverse">@color/white</item>
        <item name="colorOnSurfaceInverse">@color/black</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

    <!-- Use the base theme for your main theme -->
    <style name="Theme.AndroidFundamental1" parent="Base.Theme.AndroidFundamental1" />

    <!-- Custom style for navigation indicator -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#040D12</item>
    </style>
</resources>
